{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowImportingTsExtensions": true,
      "types": [
        "@sveltejs/kit", 
        "svelte"
      ]
    },
    "include": [
      "src/**/*", 
      "svelte.config.js",
      ".svelte-kit/ambient.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  